<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Department</th>
      <th>Action</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.department_id %></td>
        <td><%= task.action %></td>
        <td><%= task.priority %></td>
        <td><%#= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_department_task_path(task.department,task) %></td>
        <td><%= link_to 'Destroy', department_task_path(task.department,task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_department_task_path %>
